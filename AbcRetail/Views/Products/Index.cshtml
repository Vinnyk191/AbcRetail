

@model IEnumerable<AbcRetail.Models.ProductEntity>

@{
    ViewData["Title"] = "Products";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Products</h2>
        <a class="btn btn-success btn-lg shadow-sm" href="/Products/Create">
            + Create Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No products available. Click "Create Product" to add new items.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(p.ImageUrl))
                                {
                                    <img src="@p.ImageUrl" class="product-img rounded" />
                                }
                            </td>
                            <td>@p.Name</td>
                            <td>@String.Format("{0:C}", p.Price)</td>
                            <td>@p.Stock</td>
                            <td>
                                <a class="btn btn-sm btn-primary me-1" href="/Products/Edit/@p.RowKey">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/Products/Delete/@p.RowKey">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
<style>
    body {
        background-color: #002e63;
       
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    h2.text-primary {
        font-weight: 700;
    }

    .product-img {
        max-width: 100px;
        max-height: 80px;
        object-fit: cover;
    }

    .table-hover tbody tr:hover {
        background-color: #e2f0ff;
    }

    .table-responsive {
        background-color: #ffffff;
        padding: 15px;
    }

    .btn-lg, .btn-sm {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-lg:hover, .btn-sm:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

</style>