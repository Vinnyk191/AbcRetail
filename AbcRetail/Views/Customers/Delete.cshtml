@model AbcRetail.Models.CustomerEntity
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <h2 class="fw-bold text-danger mb-3">Delete Customer</h2>

    <div class="alert alert-danger shadow-sm">
        <p>Are you sure you want to delete this customer?</p>
        <strong>@Model.FullName</strong> (@Model.Email)
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="PartitionKey" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<style>

    body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    h2.text-primary, h2.text-danger {
        font-weight: 700;
    }

    .card {
        background-color: #ffffff;
        border-radius: 12px;
    }

    .btn-lg {
        min-width: 120px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .form-control {
        border-radius: 8px;
    }

</style>