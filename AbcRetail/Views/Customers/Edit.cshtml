@model AbcRetail.Models.CustomerEntity
@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container mt-4">
    <h2 class="fw-bold text-warning mb-3">Edit Customer</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="RowKey" />
        <input type="hidden" asp-for="PartitionKey" />

        <div class="mb-3">
            <label asp-for="FullName" class="form-label fw-bold"></label>
            <input asp-for="FullName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold"></label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label fw-bold"></label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    h2.text-primary, h2.text-danger {
        font-weight: 700;
    }

    .card {
        background-color: #ffffff;
        border-radius: 12px;
    }

    .btn-lg {
        min-width: 120px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .form-control {
        border-radius: 8px;
    }

</style>
