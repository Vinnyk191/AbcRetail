@model AbcRetail.Models.CustomerEntity
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">Customer Details</h2>

    <div class="card shadow-sm p-3">
        <div class="card-body">
            <h4 class="card-title">@Model.FullName</h4>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
           
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
